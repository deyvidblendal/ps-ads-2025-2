generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/*
  O nome de um model no Prisma:
  * deve iniciar com letra mai√∫scula
  * deve estar no singular
*/
model Custumer {
  id              Int           @id @default(autoincrement())
  name            String
  ident_document  String
  birth_date      DateTime?     // ? significa que o campo pode ter valor NULL
  street_name     String
  house_name      String
  complements     String?
  district        String
  municipality    String
  state           String
  phone           String
  email           String
}

